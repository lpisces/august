.things.span17{:style => "margin-left:0px;"}
  - @items.each do |item|
    .thing.span8.pull-left{:style => "margin-left:0px;"}
      %a{:href => item.buy_url, :target => '_blank'}
        %img.pic_url{:src => item.pic_url}
      .info
        %a.title{:href => thing_path(item.id), :target => '_blank'}= item.title
        %br/
        - if item.coupon_price.to_s.strip.size > 0
          %span.coupon_price= "&yen;&nbsp;#{item.coupon_price}&nbsp;".html_safe
        - if item.coupon_price.to_s.strip.size > 0
          %span.price.sale= "&yen;&nbsp;#{item.price}".html_safe
        - else 
          %span.price= "&yen;&nbsp;#{item.price}".html_safe
        %a.item_link.pull-right{:href => item.buy_url, :target => '_blank'}= "#{I18n.t('common.go')} <i class='icon-double-angle-right icon-large'></i>".html_safe
.sidebar
  .section
    %a.section{:href => category_path(@section.id)}= @section.name
    .nodes
      - @section.nodes.each do |node|
        %a.btn.btn-mini.node.pull-left{:href => "/n/#{node.id}", :target => '_blank'}= node.name

  .tags
    %a.tags{:href => "/t/", :target => '_blank'}= I18n.t('common.hot_tags')
    .tags_list
      - @tags.each do |tag|
        %a.btn.btn-mini.tag.pull-left{:href => "/t/#{tag.id}", :target => '_blank'}= "<i class='icon-tag'></i>&nbsp;#{tag.name}".html_safe
    
