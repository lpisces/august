%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li.active= I18n.t("nodes.title")


%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('nodes.name')
    %th= I18n.t('nodes.sort')
    %th= I18n.t('nodes.summary')
    %th= I18n.t('nodes.section')
    %th

  - @nodes.each do |node|
    %tr
      %td= node.name
      %td= node.sort
      %td= node.summary
      %td= node.section.try(:name)
      %td
        = link_to '<i class="icon-pencil"></i>'.html_safe, edit_node_path(node)
        = link_to '<i class="icon-remove"></i>'.html_safe, node, :method => :delete, :data => { :confirm => I18n.t('common.confirm') }

= link_to I18n.t('common.new'), new_node_path
