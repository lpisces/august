%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li
    %a{:href => nodes_path}= I18n.t("nodes.title")
    %span.divider /
  %li.active= I18n.t('common.show')

%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('nodes.name')
    %td= @node.name
    %tr
    %th= I18n.t('nodes.sort')
    %td= @node.sort
    %tr
    %th= I18n.t('nodes.summary')
    %td= @node.summary
    %tr
    %th= I18n.t('nodes.section')
    %td= @node.section.try(:name)
  
= link_to I18n.t('common.edit'), edit_node_path(@node)
\|
= link_to I18n.t('common.back'), nodes_path
