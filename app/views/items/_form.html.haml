= form_for(@item, :html => {:class => 'form-horizontal'} ) do |f|
  - if @item.errors.any?
    .alert.alert-error
      %button.close{"data-dismiss" => "alert", :type => "button"} x
      = I18n.t('errors.messages.not_saved', count: @item.errors.count)

  .control-group{:class => ('error' unless @item.errors[:name].empty?)}
    = f.label :name, I18n.t('items.name'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.text_field :name, :autofocus => true
      %span.help-inline= @item.errors[:name].first unless @item.errors[:name].empty?
  .control-group{:class => ('error' unless @item.errors[:summary].empty?)}
    = f.label :summary, I18n.t('items.summary'), :class => 'control-label', :style => 'width:80px'
    .controls{:style => 'margin-left:100px;'}
      = f.text_area :summary, :autofocus => true
      %span.help-inline= @item.errors[:summary].first unless @item.errors[:summary].empty?


  .control-group
    .controls{:style => 'margin-left:100px;'}
      = f.submit I18n.t('items.submit'), :class => 'btn btn-mini btn-success'
